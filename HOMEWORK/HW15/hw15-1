#include <stdio.h>

int countWordsInFile(const char *filename) {
    FILE *fp ;
    char word[100] ;
    int count = 0 ;

    fp = fopen( filename, "r" ) ;
    if( fp == NULL ) {
        printf( "Cannot open file %s\n", filename ) ;
        return -1 ;
    }//end if

    while( fscanf( fp, "%99s", word ) == 1 ) {
        count++ ;
    }//end while

    fclose( fp ) ;
    return count ;
}//end function

int main() {
    char filename[100] ;
    int totalWords = 0 ;

    printf( "Enter file name:\n" ) ;
    scanf( "%s", filename ) ;

    totalWords = countWordsInFile( filename ) ;
    if( totalWords >= 0 )
        printf( "Total number of words in '%s' : %d words\n", filename, totalWords ) ;

    return 0 ;
}//end function
