#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
	
    int choice = 0 ;
    int random = 0 ;
    int guess = 0 ;
    int score = 0 ;

    while (1) {
        printf( "Do you want to play game ( 1 = play , -1 = exit ) : " ) ;
        scanf( "%d", &choice ) ;

        if ( choice == -1 ) {
            printf( "\nSee you again -.-\n" ) ;
            break ;
        } else if ( choice == 1 ) {
            random = rand() % 100 + 1 ;
            score = 100 ;
            int low = 1 ;
            int high = 100 ;
            printf( "\n(Score = %d)\n", score ) ;

            while (1) {
                printf( "\n Guess the winning number ( %d-%d ) : \n", low , high ) ;
                scanf( "%d", &guess ) ;

                if ( guess == random ) {
                    printf( "\nThat is correct ! The winning is %d\n", random ) ;
                    printf( "Score this game : %d\n\n", score ) ;
                    break ;
                }else if (guess < random) {
                    score -= 10 ;
                    low = guess + 1 ;
                    printf( "\nSorry , The winning number is HIGHER than %d. (Score = %d)\n", guess , score ) ;
                }else {
                    score -= 10 ;
                    high = guess - 1 ;
                    printf( "\nSorry , The winning number is LOWER than %d. (Score = %d)\n", guess , score ) ;
                }//end if

                if ( score <= 0 ) {
                    printf( "\nYou ran out of score! The winning number was %d.\n", random ) ;
                    break ;
                }//end if
            }//end while

        }//end if
    }//end while

    return 0 ;
}//end function
