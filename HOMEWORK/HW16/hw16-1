#include <stdio.h>
#include <stdbool.h>

int main() {
    int arr[] = { 15, 7, 25, 3, 73, 32, 45 } ;
    int n = sizeof(arr) / sizeof(arr[0]) ;
    int target = 32 ;
    int pos = -1 ;

    printf("Old Series : ") ;
    for( int i = 0 ; i < n ; i++ ) {
        printf( "%d", arr[i] ) ;
        if( i < n - 1 ) {
            printf( ", " ) ;
        }//end if
    }//end for
    printf( "\n" ) ;

    for( int i = 0 ; i < n - 1 ; i++ ) {
        bool swapped = false ;
        
        for( int j = 0 ; j < n - 1 - i ; j++ ) {
            if( arr[j] > arr[j + 1] ) {
                int temp = arr[j] ;
                arr[j] = arr[j + 1] ;
                arr[j + 1] = temp ;
                swapped = true ;
            }//end if
        }//end for
        
        if( swapped == false ) {
            break ;
        }//end if
    }//end for

    printf( "New Series : " ) ;
    for( int i = 0 ; i < n ; i++ ) {
        printf( "%d", arr[i] ) ;
        if( i < n - 1 ) {
            printf( ", " ) ;
        }//end if
    }//end for
    printf( "\n" ) ;

    for( int i = 0 ; i < n ; i++ ) {
        if( arr[i] == target ) {
            pos = i + 1 ;
            break ;
        }//end if
    }//end for

    printf( "Pos of %d : %d\n", target, pos ) ;

    return 0 ;
}//end function
