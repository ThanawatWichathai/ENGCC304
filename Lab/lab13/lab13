#include <stdio.h>

void swapNumbers( int *a, int *b ) {
    int temp = *a ;  
    *a = *b ;        
    *b = temp ;      
}//end void

int main() {
    int num1 = 0 ;
	int num2 = 0 ;   
    int *ptr1 ;
	int *ptr2 ; 

    printf( "Enter num1 : \n") ;
    scanf( "%d", &num1 ) ;

    printf( "Enter num2 : \n") ;
    scanf( "%d", &num2 ) ;

    ptr1 = &num1 ;
    ptr2 = &num2 ;

    printf( "Before swap (num1 & num2) : %d, %d\n", num1, num2 ) ;

    swapNumbers(ptr1, ptr2) ;

    printf( "After swap (num1 & num2) : %d, %d\n", num1, num2 ) ;

    return 0 ;
}//end function
